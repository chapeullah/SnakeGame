{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++23",
                "main.cpp",
                "-o",
                "${workspaceFolder}/snake_game.exe",
                "-IC:/msys64/mingw64/include",
                "-LC:/msys64/mingw64/lib",
                "-IC:/VSCode_Assets/Lib/include/httplib",
                "-IC:/VSCode_Assets/Lib/include",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",
                "-lpqxx",
                "-lpq",
                "-lssl",
                "-lcrypto",
                "-lws2_32",
                "-lcrypt32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}